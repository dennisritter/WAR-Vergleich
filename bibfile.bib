file = {:C$\backslash$:/Users/denni{\_}000/Desktop/WAR/WAR-Vergleich/DeLFI{\_}2017{\_}Sebastian Hobert-Almut Reiners-Pascal Freier-Matthias Schumann{\_}StudiDuell App - Mobiles Lernen mit interaktiven Hörsaalspielen.pdf:pdf},
